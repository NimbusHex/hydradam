<%= form_tag '/users/auth/ldap/callback', :class => "form-signin offset20 span30" do |f| %>
  <h2 class="form-signin-heading">Please sign in</h2>

  <%= text_field_tag :username, nil, :class=>'input-block-level', placeholder: 'User name' %>
  <%= password_field_tag :password, nil, :class=>'input-block-level', placeholder: 'Password' %>

  <div><%= submit_tag "Sign in", :class=>"btn btn-large btn-primary" %></div>
<% end %>
